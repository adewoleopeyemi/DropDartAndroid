<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:id="@+id/messageLayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_gravity="end"
        android:background="@color/colorDarkBlue">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardView"
            android:background="@color/colorDarkBlue">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkBlue">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="20dp"
                    android:background="@color/colorDarkBlue">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@android:color/white">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            android:background="@null"
                            android:layout_marginTop="6dp">


                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_default_person_white"
                                android:backgroundTint="@null"
                                android:background="@null" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/messsageTv"
                            android:textFontWeight="3"
                            android:textSize="20sp"
                            android:textColor="@color/colorBlue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender's Message"
                            android:background="@drawable/chating_text"
                            android:layout_marginRight="50dp"/>

                        <TextView
                            android:id="@+id/timeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="4:20pm"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:background="@color/colorDarkBlue"
                            android:layout_marginBottom="5dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seenTv"
            android:text="delivered"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/transparent_edittext"
            android:textSize="10sp"
            android:layout_below="@id/cardView"
            android:layout_marginLeft="10dp"
            android:layout_alignEnd="@id/cardView" />

    </RelativeLayout>







</LinearLayout>