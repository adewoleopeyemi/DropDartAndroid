<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:id="@+id/messageLayout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="10dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:gravity="end">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:id="@+id/cardView">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:elevation="20dp"
                    android:id="@+id/messageCardView">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/colorBlue">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:background="@null"
                            android:layout_marginTop="6dp">


                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_default_person_white"
                                android:backgroundTint="@null"
                                android:background="@null"
                                android:visibility="gone"/>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/messsageTv"
                            android:textFontWeight="3"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender's Message"
                            android:background="@drawable/chating_text_sender"
                            android:layout_marginRight="50dp"/>




                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorDarkBlue"
                    android:text="4:20pm"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_toEndOf="@id/messageCardView"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seenTv"
            android:text="delivered"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/time_text_sender"
            android:textSize="15sp"
            android:layout_below="@id/cardView"
            android:layout_marginLeft="10dp"
            android:layout_alignEnd="@id/cardView"/>

    </RelativeLayout>
</LinearLayout>